<workflow-app name="migration-test" xmlns="uri:oozie:workflow:0.2">
   <start to="sqoop-job"/> 

    <action name="sqoop-job">
        <sqoop xmlns="uri:oozie:sqoop-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
	    <prepare>
                <delete path="${nameNode}/user/${wf:user()}/test/output/"/>
                <mkdir path="${nameNode}/user/${wf:user()}/test/output/"/>
            </prepare>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
            <arg>import</arg>
	    	<arg>-libjars</arg>
	    	<arg>${subwf}/sqoop-ext.jar</arg>
	    	<arg>-D</arg>
	    	<arg>sqoop.hbase.insert.put.transformer.class=org.apache.sqoop.hbase.TimeSeriesPutTransformer</arg>
            <arg>--options-file</arg>
            <arg>migration.option</arg>
           <file>migration.option</file>
	   	   <file>${subwf}/sqoop-ext.jar</file>
        </sqoop>
        <ok to="media-updatebatch"/>
        <error to="media-sqoop-fail"/>
    </action>
 
    <kill name="media-sqoop-fail">
        <message>Sqoop failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>

    <action name="media-updatebatch">
       <shell xmlns="uri:oozie:shell-action:0.1">
          <job-tracker>${jobTracker}</job-tracker>
          <name-node>${nameNode}</name-node>
          <configuration>
             <property>
               <name>mapred.job.queue.name</name>
               <value>${queueName}</value>
             </property>
         </configuration>
         <exec>migration.script</exec>
         <file>migration.script</file>
         <file>migration.import</file>
         <file>migration.option</file>
        </shell>
        <ok to="end"/>
        <error to="media-shell-fail"/>
    </action>
 
  <kill name="media-shell-fail">
        <message>Script failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
  </kill> 

  
   <end name="end"/>

 </workflow-app>
