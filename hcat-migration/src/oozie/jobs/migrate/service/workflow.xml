<workflow-app name="migration" xmlns="uri:oozie:workflow:0.2">
    <start to="service-import"/>
   <!--
    <start to="forking"/>  
  
    <fork name="forking">  
        <path start="service-import"/>  
        <path start="hca-import"/>  
    </fork>  
  -->

     
    <action name="service-import">
        <sqoop xmlns="uri:oozie:sqoop-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
            <arg>import</arg>
            <arg>--options-file</arg>
            <arg>${serviceSql}</arg>
           <file>${serviceSql}</file>
        </sqoop>
        <ok to="end"/>
        <error to="sqoop-import-fail"/>
    </action>
 
    <action name="hca-import">
        <sqoop xmlns="uri:oozie:sqoop-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
            <arg>import</arg>
            <arg>--options-file</arg>
            <arg>${hcaSql}</arg>
           <file>${hcaSql}</file>
        </sqoop>
        <ok to="end"/>
        <error to="sqoop-import-fail"/>
    </action>
   

    <kill name="sqoop-import-fail">
        <message>Sqoop failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
 

   <end name="end"/>

 </workflow-app>
